  <title>Freetime</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>

<body>
<div class="container">
<div class="row">
<div class="col-lg-12">
<div class="page-header">
  <a href="/"><h1 class="text-center">Are <em>you</em> busy this week?</h1></a>
</div>

<div class="bs-example table-responsive">
<table class="text-center table table-striped table-hover ">
<thead>
<tr>
  <th class="text-center">Time</th>
  <th class="text-center">Monday</th>
  <th class="text-center">Tuesday</th>
  <th class="text-center">Wednesday</th>
  <th class="text-center">Thursday</th>
  <th class="text-center">Friday</th>
  <th class="text-center">Saturday</th>
  <th class="text-center">Sunday</th>
</tr>
</thead>
<tbody>
<% for(var j=0; j<times.length; j++) {%>
  <tr>
    <td><%= times[j] %> hrs</td>
  <% for(var k=0; k<days.length; k++) {%>
    <%if (schedule[days[k] + '-' + times[j]] == 1) { %>
      <td class="danger input"><input name="<%= days[k] + '-' + times[j] %>" value="<%=schedule[days[k] + '-' + times[j]] %>" hidden><span>I'm Busy</span>
      </td>
    <% } %>
    <%if (schedule[days[k] + '-' + times[j]] == 0) { %>
      <td class="success input"><input name="<%= days[k] + '-' + times[j] %>" value="<%=schedule[days[k] + '-' + times[j]] %>" hidden><span>I'm Free</span>
      </td>
    <% } %>
  <% } %>
  </tr>
<% } %>
</tbody>
</table>
  <h4>A prototype by <a href="https://twitter.com/tallanstacey">@tallanstacey</a></h4>
</div>
</div>
</div>
</div>
